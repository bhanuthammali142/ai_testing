rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Tests collection - readable by all authenticated users, writable by admins
    match /tests/{testId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Questions collection - readable by all authenticated users, writable by admins
    match /questions/{questionId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Exam assignments - authenticated users can read their own, admins can write
    match /exam_assignments/{assignmentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Students collection
    match /students/{studentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Attempts collection - students can read/write their own
    match /attempts/{attemptId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Performance collection
    match /performance/{performanceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
